{
  "name": "canvasimo",
  "version": "0.5.3",
  "description": "An HTML5 canvas drawing library, with 150+ useful methods, jQuery-like fluent interface, and cross-browser compatibility enhancements.",
  "main": "src/index.js",
  "directories": {
    "example": "examples"
  },
  "scripts": {
    "start": "http-server docs -c-0 -o",
    "build": "babel-node scripts/generate-docs.js",
    "watch": "babel-node scripts/generate-docs.js watch",
    "tests": "istanbul cover node_modules/mocha/bin/_mocha -- --require tests/helpers/test-setup.js --bail --recursive tests",
    "tests-no-coverage": "mocha --require tests/helpers/test-setup.js --bail --recursive tests",
    "lint": "eslint src/ && eslint -c .eslintrc-docs.json docs/src/ tests/helpers/ && eslint -c .eslintrc-tests.json tests/",
    "test": "npm run lint && npm run tests"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jakesidsmith/canvasimo.git"
  },
  "keywords": [
    "sensible",
    "simple",
    "fluent",
    "canvas",
    "api",
    "interface",
    "html5",
    "chain",
    "canvasimo"
  ],
  "author": "Jake 'Sid' Smith",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jakesidsmith/canvasimo/issues"
  },
  "homepage": "https://github.com/jakesidsmith/canvasimo#readme",
  "devDependencies": {
    "babel-cli": "=6.11.4",
    "babel-preset-react": "=6.11.1",
    "babelify": "=7.3.0",
    "browserify": "=13.1.0",
    "chai": "=3.5.0",
    "eslint": "3.19.0",
    "eslint-config-jakesidsmith": "github:jakesidsmith/eslint-config-jakesidsmith#v2.2.0",
    "http-server": "=0.9.0",
    "istanbul": "=1.1.0-alpha.1",
    "jsdom": "=8.4.1",
    "minifyify": "=7.3.3",
    "mkdirp": "=0.5.1",
    "mocha": "=2.4.5",
    "react": "=15.3.0",
    "react-dom": "=15.3.0",
    "rimraf": "=2.5.4",
    "sinon": "=1.17.3",
    "sinon-chai": "=2.8.0",
    "underscore": "=1.8.3",
    "watch": "=0.19.1"
  }
}
